{
  "name": "redpanda-docs-playbook",
  "version": "1.0.0",
  "description": "Redpanda documentation",
  "license": "ISC",
  "scripts": {
    "build": "cross-env-shell \"if [ \\\"$OSTYPE\\\" = \\\"msys\\\" ] || [ \\\"$OSTYPE\\\" = \\\"cygwin\\\" ] || [ \\\"$OSTYPE\\\" = \\\"win32\\\" ]; then ./start-scripts/build.bat; else ./start-scripts/build.sh; fi\"",
    "start": "npm run build && wds --node-resolve --open home/index.html --watch --root-dir docs"
  },
  "dependencies": {
    "@antora/cli": "3.1.2",
    "@antora/site-generator": "3.1.2",
    "@asciidoctor/tabs": "^1.0.0-beta.5",
    "@octokit/plugin-retry": "^4.1.3",
    "@octokit/rest": "^19.0.7",
    "algoliasearch": "^4.17.0",
    "chalk": "4.1.2"
  },
  "devDependencies": {
    "@web/dev-server": "^0.2.1",
    "cross-env": "^7.0.3",
    "open": "^9.1.0",
    "js-yaml": "^4.1.0",
    "gulp": "^4.0.2",
    "gulp-connect": "^5.7.0",
    "html-entities": "2.3",
    "node-html-parser": "5.4.2-0"
  }
}
